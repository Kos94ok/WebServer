<Window x:Class="RPGEditor.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе" Height="425" Width="496" MinWidth="270" MinHeight="240">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Stroke="#FFD4D4D4" Height="94" VerticalAlignment="Top"/>
        <Rectangle Fill="#FFF4F4F5" Stroke="#FFD4D4D4" Height="94" VerticalAlignment="Bottom"/>
        <Button x:Name="Button_Accept" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_Accept_Click"/>
        <Label x:Name="Label_Version" Content="Версия %CurrentVersion%" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Александр Семёнов, 2016" Margin="10,50,92,0" VerticalAlignment="Top"/>
        <Label Content="RPG Editor" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <RichTextBox x:Name="Text_VersionHistoryRich" Margin="0,76,0,37" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
    </Grid>
</Window>

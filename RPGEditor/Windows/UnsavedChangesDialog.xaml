<Window x:Class="RPGEditor.UnsavedChangesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPGEditor" Height="160" Width="367">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Stroke="#FFD4D4D4" Height="45" VerticalAlignment="Bottom"/>
        <Button x:Name="Button_Save" Content="_Сохранить" HorizontalAlignment="Right" Margin="0,0,197,10" VerticalAlignment="Bottom" Width="100" IsDefault="True" Click="Button_Save_Click"/>
        <Button x:Name="Button_Ignore" Content="_Не сохранять" HorizontalAlignment="Right" Margin="0,0,92,10" VerticalAlignment="Bottom" Width="100" Click="Button_Ignore_Click"/>
        <Button x:Name="Button_Cancel" Content="Отмена" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="77" IsCancel="True" Click="Button_Cancel_Click"/>
        <Label x:Name="Label_Main" Content="Сохранить изменения в файле" Margin="5,5,5,46" FontSize="16" Background="Transparent">
            <Label.Foreground>
                <SolidColorBrush Color="#FF003972"/>
            </Label.Foreground>
        </Label>
    </Grid>
</Window>
